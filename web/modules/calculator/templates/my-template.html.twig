<h2>Result</h2>

{% for category, item in nodes %}
    {{ category }} - ${{ item.total }}
    <hr />
    {% for key, value in item %}
        {% if key != 'total' %}
            {{ value.title }} - ${{ value.price }}
            {% if value.times > 1 %}
                * {{ value.times }}
            {% endif %}
            <br />
        {% endif %}
    {% endfor %}
    <br />
{% endfor %}

<h3>Total: ${{ total }} </h3>